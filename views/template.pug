extends layout 

block content 
    h2 New message
    form(method='POST' action='/new')
        div.form-group
            label(for='name') Name 
            input(type='text' placeholder='Name' name='name' required='true')
        div.form-group
            label(for='message') Message 
            textarea(type='text' placeholder='Message' name='message' minlength='2' rows='5' required='true')
        button(type="submit") Submit
        
    
    